# Application Environment Variables
# Copy this file to .env.local and adjust the values

# Node Environment
# Possible values: development, production, test
NODE_ENV=development

# Database Configuration
# MongoDB Connection URI (REQUIRED)
MONGODB_URI=mongodb://localhost:27017/casino_liga
# Optional: Specify database name explicitly (defaults to 'casino_liga' if not set)
MONGODB_DATABASE=casino_liga

# NextAuth Configuration
# Secret for JWT encryption (REQUIRED - at least 32 characters)
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-chars-long
# Base URL of your application (REQUIRED in production)
NEXTAUTH_URL=http://localhost:3000

# Feature Flags
# Enable monitoring features (optional)
ENABLE_MONITORING=false
# Use mock database for testing (optional)
USE_MOCK_DB=false

# CORS settings (optional)
CORS_ORIGIN=http://localhost:3000

# Rate limiting (optional)
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW_MS=60000
